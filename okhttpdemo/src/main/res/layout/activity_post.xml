<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.androidxx.yangjw.okhttpdemo.PostActivity">

    <Button
        android:id="@+id/okhttp_requestBody_json_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求-RequestBody--json数据提交"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/okhttp_fromBody_key_value_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求-FromBody--键值对数据提交"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/okhttp_formBody_hashmap_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求-HashMap--数据提交"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/okhttp_requestBody_uploadFile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求-异步上传文件"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/okhttp_requestBody_uploadImage_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求-异步上传图片"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/okhttp_multipartBody_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST请求-异步上传Multipart复杂请求体文件"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_clear_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/okhttp_requestBody_json_btn"
        android:text="清除内容" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/okhttp_post_show_result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>


</LinearLayout>
